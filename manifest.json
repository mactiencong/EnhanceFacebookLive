{
  "manifest_version": 2,
  "name": "Enhance™ Facebook Live",
  "short_name": "Enhance™ Facebook Live",
  "description": "Enhance™ Facebook Live",
  "version": "1.0.1",
  "author": "matico",
  "permissions": [
    "webRequest", 
    "webRequestBlocking",
    "webNavigation",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
        "js/background.js"
    ],
    "persistent": true
  },
  "web_accessible_resources": [
    "data/*.json"
  ],
  "browser_action":{
    "default_icon": "icon/enable.png"
  }
}